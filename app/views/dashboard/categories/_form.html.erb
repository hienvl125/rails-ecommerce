<%= form_with model: model, url: url, method: method, html: { class: "space-y-4" } do |f| %>
  <div class="field text-sm">
    <%= f.label :name, class: "block font-medium text-gray-900 mb-2" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "new-category-name" ,
      class: "text-sm w-full bg-gray-50 border border-gray-300 text-gray-900 rounded-lg p-2.5" ,
      placeholder: "Iphone..."
    %>
  </div>

  <div class="field text-sm">
    <%= f.label :description, class: "block font-medium text-gray-900 mb-2" %>
    <%= f.text_field :description, autofocus: true, autocomplete: "new-category-name" ,
      class: "text-sm w-full bg-gray-50 border border-gray-300 text-gray-900 rounded-lg p-2.5" ,
      placeholder: "Description..."
    %>
  </div>

  
  <% if model.new_record? %>
    <div class="field text-sm">
      <%= render "shared/image_uploader_input", f: f, label_name: :image, label_display_name: :image, image_uploader_ref_id: "category-image" %>
    </div>
  <% else %>
    <div class="field text-sm">
      <%= f.label :current_image, class: "block font-medium text-gray-900 mb-2" %>
      <%= image_tag model.image, class: "max-w-64 mb-2 h-auto" %>
      <%= render "shared/image_uploader_input", f: f, label_name: :image, label_display_name: :new_image, image_uploader_ref_id: "category-image" %>
    </div>
  <% end %>

  <%= f.submit "Submit", class: "text-sm bg-blue-600 text-white w-full px-5 py-2.5 rounded-lg hover:cursor-pointer hover:bg-blue-700" %>
<% end %>
